<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header">
    <h1>
      <%= @dashboard.name %>
      <small><%= @dashboard.description %></small>
      <small class="pull-right">
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Settings
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li>
              <%= link_to 'Edit', edit_dashboard_path(@dashboard) %>
            </li>
            <li>
              <%= link_to 'Destroy', @dashboard, method: :delete, data: {confirm: 'Are you sure?'} %></li>
          </ul>
        </div> 
      </small>
    </h1>
  </div>
</div>

<div class="container" id="widget-wrapper">
  <div class="widget" id="1">
    <div class="widget-title">
      <span class="glyphicon glyphicon-move" onclick="$.fn.EnableWidgtViewSettings(this.parentNode.parentNode.id);">
      </span>
      Title
    </div>  
    <div class="widget-body">
      Body
    </div>
  </div>

  <div class="widget" id="2">
